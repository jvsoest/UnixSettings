myDate=$(date '+%Y-%m-%d')
folderLoc=$HOME/Library/Mobile\ Documents/iCloud~md~obsidian/Documents/KnowledgeBase/DailyLogs/

# if [ $# -gt 0 ];
#   then
#     myDate=$1
# fi

filePath=$folderLoc$myDate.md

if [ ! -f "$filePath" ]; then
  echo "# $(date '+%d-%m-%Y')" >> "$filePath"
  echo >> "$filePath"
  echo >> "$filePath"
fi

if [ $# -eq 0 ]; then
  vim vim "+normal G$" "$filePath"
else
  if [ $1 == "-a" ]; then
    echo $2 >> "$filePath"
  fi
fi
