myDate=$(date '+%Y-%m-%d')
folderLoc=$HOME/KnowledgeBase/DailyLogs/

if [ $# -gt 0 ];
  then
    myDate=$1
fi

filePath=$folderLoc$myDate.md

if [ ! -f "$filePath" ]; then
  echo "# $(date '+%d-%m-%Y')" >> $filePath
  echo >> $filePath
  echo >> $filePath
fi

